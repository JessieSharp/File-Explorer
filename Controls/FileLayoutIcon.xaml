<UserControl x:Class="File_Explorer.Controls.FileLayoutIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:File_Explorer.Controls"
             mc:Ignorable="d" 
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="{DynamicResource MaterialDesignFont}"
             Margin="16 16 0 0"
             d:DesignHeight="128" d:DesignWidth="110">
    <Border CornerRadius="8" Height="128" Width="110" Name="BorderFile">
        <Grid>
            <materialDesign:PackIcon Foreground="{DynamicResource PrimaryHueMidBrush}" Name="IconFile" Kind="FileQuestion" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,28" Height="Auto" Width="Auto"/>
            <TextBlock Name="TextBlockFileName" VerticalAlignment="Bottom" FontSize="12" TextWrapping="Wrap" Text="TEST" HorizontalAlignment="Center" Height="28"/>
        </Grid>
    </Border>
</UserControl>
